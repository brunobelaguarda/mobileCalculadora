<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:singleLine="true"
    />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_C"
            style="@style/operatores_buton"
            android:layout_weight="3"
            android:text="C" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_divisao"
            style="@style/operatores_buton"
            android:text="/" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_sete"
            style="@style/Numers_button"
            android:text="7" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_oito"
            style="@style/Numers_button"
            android:text="8" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_nove"
            style="@style/Numers_button"
            android:text="9" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_multip"
            style="@style/operatores_buton"
            android:text="X" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_quatro"
            style="@style/Numers_button"
            android:text="4" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_cinco"
            style="@style/Numers_button"
            android:text="5" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_seis"
            style="@style/Numers_button"
            android:text="6" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_subtracao"
            style="@style/operatores_buton"
            android:text="-" />

    </LinearLayout>

    <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_um"
        style="@style/Numers_button"
        android:text="1" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_dois"
        style="@style/Numers_button"
        android:text="2" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_tres"
        style="@style/Numers_button"
        android:text="3" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_adicao"
        style="@style/operatores_buton"
        android:text="+" />

</LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ponto"
            style="@style/Numers_button"
            android:text="." />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zero"
            style="@style/Numers_button"
            android:text="0" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backspace"
            style="@style/Numers_button"

            android:src="@drawable/backspace"

           />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/igual"
            style="@style/operatores_buton"
            android:text="=" />

    </LinearLayout>


</LinearLayout>